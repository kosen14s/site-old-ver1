mixin head(title, type, description, stylesheet, ogp)
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width,initial-scale=1")

  unless description
    - var description = "Á≠ãËÇâ„Åå„Åô„Åπ„Å¶üí™";

  meta(name="description" content=description)

  meta(property="og:type" content=type)
  meta(property="og:url" content="//kosen14s.github.io")
  meta(property="og:site_name" content="Kosen14's")
  meta(property="og:locale" content="ja_JP")
  meta(property="fb:admins" content="1017782938294691")
  meta(property="fb:app_id" content="1017782938294691")
