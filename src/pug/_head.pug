  if title
    title #{title} | Kosen14's
    meta(name="twitter:title" content=title + " | Kosen14's")
  else
    title Kosen14's
    meta(name="twitter:title" content="Kosen14's")

  if stylesheet
    link(rel="stylesheet" href=stylesheet)
